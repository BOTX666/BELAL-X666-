# Bot runtime
NODE_ENV=production

# Messenger bot token (from QueenChat or similar)
BOT_TOKEN=your_bot_token_here

# Language fallback (optional override)
DEFAULT_LANG=en

# API keys for external services
QUEENCHAT_API_KEY=your_queenchat_api_key_here
CHATGPT_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Logging options
LOG_LEVEL=info
LOG_PATH=logs/

# Optional: fallback model name (if needed)
FALLBACK_MODEL=gemini-pro

# Optional: command prefix override
BOT_PREFIX=!
